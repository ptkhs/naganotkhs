<div class="container">
	<div class="row">
        <div class="col-xs-8">
　　　　　 <h2>注文情報</h2>
　　　　　  <table>
　　　　　	<tr>
　　　　　		<td>注文日</td>
　　　　　		<td><%= @order.created_at %></td>
　　　　　	</tr>
　　　　　	<tr>
　　　　　		<td>配送先</td>
　　　　　		<td><%= @order.zipcode + @order.address %>
                    <%= @order.name %></td>
　　　　　	</tr>
　　　　　	<tr>
　　　　　		<td>支払方法</td>
　　　　　		<td><%= @order.paymethod %></td>
　　　　　	</tr>
　　　　　	<tr>
　　　　　		<td>ステータス</td>
　　　　　		<td><%= @order.status %></td>
　　　　　	</tr>
　　　　　  </table>
        </div>
        <div class="col-xs-4">
        	<h2>請求情報</h2>
        	<table>
        		<tr>
        			<td>商品合計</td>
        			<td><%= @order.charge - @order.fee %></td>
        		</tr>
        		<tr>
        			<td>配送料</td>
        			<td><%= @order.fee %></td>
        		</tr>
        		<tr>
        			<td>ご請求額</td>
        			<td><%= @order.charge %></td>
        		</tr>
        	</table>
        </div>
    </div>
    <div class="low">
    	<div class="col-xs-12">
    		<h2>注文内容</h2>
    		<table>
    		  <thead>
        		<tr>
        			<th>商品</th>
        			<th>単価（税込）</th>
        			<th>個数</th>
        			<th>小計</th>
        		</tr>
        	</thead>
            <tbody>
            <% @order_details.each do |orderdetail| %>
        		<tr>
        			<td><%= orderdetail.item.name %></td>
        			<td><%= (((orderdetail.purchase_price)*1.10).to_i).to_s(:delimited) %></td>
        			<td><%= orderdetail.purchase_quantity %></td>
        			<td><%= (((orderdetail.purchase_price*orderdetail.purchase_quantity)*1.10).to_i).to_s(:delimited) %></td>
        		</tr>
            <% end %>
            </tbody>
        	</table>
        </div>
    </div>
</div>
