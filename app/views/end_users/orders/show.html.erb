<div class="container">
	<div class="row">
        <div class="col-xs-8">
           <h2>注文情報</h2>
           <table class="table table-bordered">
             <tr>
                <td>注文日</td>
                <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
             </tr>
             <tr>
                <td>配送先</td>
                <td><%= @order.zipcode + @order.address %><br>
                    <%= @order.name %></td>
             </tr>
             <tr>
                <td>支払方法</td>
                <td><%= @order.paymethod %></td>
             </tr>
             <tr>
                <td>ステータス</td>
                <td><% case @order.status 
                       when 0 %>入金待ち
                    <% when 1 %>入金確認
                    <% when 2 %>製作中
                    <% when 3 %>発送準備中
                    <% when 4 %>発送済
                    <% end %></td>
             </tr>
           </table>
        </div>
        <div class="col-xs-4">
        	<h2>請求情報</h2>
        	<table class="table table-bordered">
        		<tr>
        			<td>商品合計</td>
        			<td><%= (@order.charge - @order.fee).to_i.to_s(:delimited) %>円</td>
        		</tr>
        		<tr>
        			<td>配送料</td>
        			<td><%= @order.fee %>円</td>
        		</tr>
        		<tr>
        			<td>ご請求額</td>
        			<td><%= (@order.charge).to_i.to_s(:delimited) %>円</td>
        		</tr>
        	</table>
        </div>
    </div>
    <div class="row">
    	<div class="col-xs-12">
    		<h2>注文内容</h2>
    		<table class="table table-bordered">
    		  <thead>
        		<tr>
        			<th>商品</th>
        			<th>単価（税込）</th>
        			<th>個数</th>
        			<th>小計</th>
        		</tr>
        	</thead>
            <tbody>
            <% @order_details.each do |orderdetail| %>
        		<tr>
        			<td><%= orderdetail.item.name %></td>
        			<td><%= (((orderdetail.purchase_price)*1.10).to_i).to_s(:delimited) %>円</td>
        			<td><%= orderdetail.purchase_quantity %></td>
        			<td><%= (((orderdetail.purchase_price*orderdetail.purchase_quantity)*1.10).to_i).to_s(:delimited) %>円</td>
        		</tr>
            <% end %>
            </tbody>
        	</table>
        </div>
    </div>
</div>
