<div class="container">
<h2>購入情報入力</h2>

<h2>支払い方法</h2>
  <%= form_for @pre_order, url: orders_create_path do |f| %>
    <%= f.radio_button :paymethod, "クレジットカード", checked:true %>クレジットカード
    <%= f.radio_button :paymethod, "銀行振込" %>銀行振込
<br>
<h2>お届け先</h2>
<table class = "table">
  <tr>
     <td><%= f.radio_button :destselect, 1, checked:true %>ご自身の住所<br>
        <%= current_end_user.zipcode %>
        <%= current_end_user.address %>
        <%= current_end_user.lastname %>
        <%= current_end_user.firstname %>
    </td>
  </tr>
  <tr>
     <td><%= f.radio_button :destselect, 2 %>登録済住所から選択<br><%= f.collection_select(:addressint, current_end_user.destinations, :id, :fulladdress) %></td>
  </tr>
  </table>
  <table class = "table">
  <tr>
     <td><%= f.radio_button :destselect, 3 %>新しいお届け先<br>郵便番号<%= f.text_field :zipcode %>　※ハイフンなし<br><div>　</div>
      住所　<%= f.text_field :address %><br><div>　</div>
      宛名　<%= f.text_field :name %><br><div>　</div>
      <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
    </td>
  </tr>
    <% end %>
</div>