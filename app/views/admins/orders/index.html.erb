<div class="container">
  <div class="row">
      <h2>注文一覧画面</h2>
    <div class="col-xs-8 col-xs-offset-2">
  <table class="table">
  	<thead>
  	<tr class="active">
  		<th>購入日時</th>
  		<th>購入者</th>
  		<th>注文個数</th>
  		<th>注文ステータス</th>
  	</tr>
  	</thead>
  	<tbody>
  		<% @orders.each do |order| %>
    <tr>
  		<td><%= link_to admins_orders_show_path(order) do %>
        <%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
  		<td><%= order.end_user.lastname + order.end_user.firstname %></td>
  		<td><%= order.allquantity %></td>
  		<td><% case order.status
           when 0 %>入金待ち</td>
        <% when 1 %>入金確認</td>
        <% when 2 %>製作中</td>
        <% when 3 %>発送準備中</td>
        <% when 4 %>発送済</td>
  		    <% end %>
          <% end %>
      <% end %>
    </tr>
  	</tbody>
  </table>
  <%= paginate @orders %>
  <%= link_to "売上管理", admins_sales_path, class:'btn btn-success' %>
</div>
</div>
</div>