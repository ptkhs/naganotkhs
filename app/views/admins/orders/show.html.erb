<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文詳細画面</h2>
			<table class="table">
				<tr>
					<td>購入者</td>
					<td><%= @order.end_user.lastname + @order.end_user.firstname %></td>
				</tr>
				<tr>
					<td>配送先</td>
					<td><%= @order.zipcode + @order.address %>
						<%= @order.name %>
					</td>
				</tr>
				<tr>
					<td>支払方法</td>
					<td><%= @order.paymethod %></td>
				</tr>
				<tr>
					<td>注文ステータス</td>
					<%= form_for @order, url:admins_orders_update_path do |f| %>
					<td><%= f.select :status, [['入金待ち', 0],['入金確認',1],['製作中',2],['発送準備中',3],['発送済み',4]] %>
					    <%= f.submit "更新" %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<table>
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>制作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_details.each do |orderdetail| %>
					<tr>
						<td><%= orderdetail.item.name %></td>
						<td><%= (((orderdetail.purchase_price)*1.10).to_i).to_s(:delimited) %></td>
						<td><%= orderdetail.purchase_quantity %></td>
						<td><%= (((orderdetail.purchase_price*orderdetail.purchase_quantity)*1.10).to_i).to_s(:delimited) %></td>
						<td><%= form_for @order_detail, url:admins_orders_update_path do |f| %>
					    <%= f.select :production_status, [['着手不可', 0],['製作待ち',1],['製作中',2],['製作完了',3]] %></td>
					    <td><%= f.submit "更新" %></td>
					    <% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-4">
			<table class="table">
				<tr>
					<td>商品合計</td>
					<td><%= @order.charge - @order.fee %></td>
				</tr>
				<tr>
					<td>送料</td>
					<td><%= @order.fee %></td>
					<td>請求金額合計</td>
					<td><%= @order.charge %></td>
				</tr>
			</table>
		</div>
	</div>
</div>