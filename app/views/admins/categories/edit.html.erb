<div class="row">
    <div class="col-xs-6 col-xs-offset-3">

<h1>ジャンル編集画面</h1>
<br>

<h3>ジャンル</h3><br>
  <%= form_for @category, url: admins_categories_update_path(@category) do |f| %>

   <%= f.text_field :name, class:'form-control' %><br>

   <label><%= f.radio_button :available, :true %> 有効 </label>
　　<label><%= f.radio_button :available, :false %> 無効 </label>
   <br><br>

   <%= f.submit '変更を保存する' %>

  <% end %>