<div class="container">

 <div class="row">

 <h1>ジャンル追加・一覧画面</h1>
 <br>

 <h3>ジャンル</h3>
  <%= form_for @category, url: admins_categories_create_path do |f| %>

   <%= f.text_field :name %><br><br>

   <label><%= f.radio_button :available, :true %> 有効 </label>
　　<label><%= f.radio_button :available, :false %> 無効</label>
　　<br>
   <%= f.submit '追加' %>
 <br><br>
  </div>
 <% end %>

 <div class="row">
  <table class="table">
   <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
        </tr>
    </thead>

    <tbody>
           <% @categories.each do |category| %>
           <tr>
             <td>
               <%= category.name %>
             </td>

            <% if category.available %>
             <td>有効</td>
            <% else %>
             <td>無効</td>
            <% end %>

            <td>
               <%= link_to "編集", admins_path(category) %>
            </td>
            <tr>
    <% end %>
   </tbody>


