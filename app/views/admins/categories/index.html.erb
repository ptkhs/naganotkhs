<div class="container">

 <div class="row">

 <h1>ジャンル追加・一覧画面</h1>
 <br>

 <h3>ジャンル</h3>
  <%= form_for @category, url: admins_categories_create_path do |f| %>
   <%= f.text_field :name %><br>
    <%= f.label :available %>
  <%= f.collection_select(:available, @destinations, :id, :name) %>
  <%= f.radio_button :available, :"true" %>
  <%= f.label :available, "有効", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :available, :false %>
  <%= f.label :available, "無効", {value: :false, style: "display: inline-block;"} %>

   <%= f.submit '追加' %>
 <br><br>
  </div>
 <% end %>

 <div class="row">
  <table class="table">
   <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
        </tr>
    </thead>

    <tbody>
           <% @categories.each do |category| %>
           <tr>
            <td>
               <%= category.name %>
            </td>
            <td>
               <%= link_to "編集", admins_path(category) %>
            </td>
            <tr>
    <% end %>
   </tbody>


